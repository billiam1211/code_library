{
    "name": "Footer Column HTML",
    "schema": [
        {
            "type": "tab",
            "label": "Column Settings",
            "sections": [
                {
                    "label": "Content",
                    "settings": [
                        {
                            "label": "Custom HTML",
                            "type": "code",
                            "typeMeta": {
                                "language": "html",
                                "placeholder": "Insert HTML markup"
                            },
                            "id": "html",
                            "default": "Add HTML"
                        }
                    ]
                }
            ]
        },
        {
            "type": "tab",
            "label": "Title Text",
            "sections": [
                {
                    "settings": [
                        {
                            "type": "input",
                            "label": "Column title",
                            "id": "title",
                            "default": "enter title"
                        }
                    ]
                }
            ]
        }
    ],
    "template": "<article class='footerColumn contact'> <h3 class='footerColumn-heading'> {{title}} <button class='footerColumn-toggle' aria-label='Expand / Collapse'></button> </h3> <div class='footerColumn-content'> {{{html}}} </div> </article>"
}
