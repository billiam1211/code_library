{
    "name": "Footer Column",
    "schema": [
        {
            "type": "array",
            "label": "Footer Column",
            "id": "footerColumn-item",
            "defaultCount": 3,
            "entryLabel": "Item",
            "thumbnail": "imageUrl",
            "schema": [

                {
                    "type": "tab",
                    "label": "Item Content",
                    "sections": [
                        {
                            "settings": [
                                {
                                    "type": "input",
                                    "label": "URL",
                                    "id": "itemUrl",
                                    "default": ""
                                },
                                {
                                    "type": "input",
                                    "label": "Item Text",
                                    "id": "itemText",
                                    "default": ""
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "type": "tab",
            "label": "Title Text",
            "sections": [
                {
                    "settings": [
                        {
                            "type": "input",
                            "label": "Column title",
                            "id": "title",
                            "default": "enter title"
                        }
                    ]
                }
            ]
        }
    ],
    "template": "<article class='footerColumn' data-section-type='footer-column'> <h3 class='footerColumn-heading'> {{title}} <button class='footerColumn-toggle' aria-label='Expand / Collapse'></button> </h3> <ul class='footerColumn-list'> {{#each footerColumn-item}} <li class='footerColumn-item'> <a class='footerColumn-action' href='{{itemUrl}}'>{{itemText}}</a> </li> {{/each}} </ul> </article>"
}