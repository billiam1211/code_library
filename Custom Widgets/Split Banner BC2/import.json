ic-next' !important; font-style: normal; font-weight: 300; } .a{{truncate _.id 5}}.section-bisco .section__content-title, .a{{truncate _.id 5}}.section-bisco, .a{{truncate _.id 5}}.section-bisco .section__subtitle, .a{{truncate _.id 5}}.section-bisco .section__content .feature h6, .a{{truncate _.id 5}}.section-bisco .section__entry p { {{#if font_color}} color: {{font_color}}; {{/if}} } .a{{truncate _.id 5}}.section-bisco .section__subtitle::before { background-color: {{font_color}}; } .a{{truncate _.id 5}}.section-bisco .section__content h6 { font-size: 16px; line-height: 130%; } .a{{truncate _.id 5}}.section-bisco .section__content p { font-family: 'Open Sans'; font-style: normal; font-weight: 400; font-size: 12px; line-height: 150%; color: {{description_color}}; } .a{{truncate _.id 5}}.section-bisco .section__entry p { font-size: 15px; } section.section-bisco div.section__inner div.section__content { text-align: {{text_align}}; } section.a{{truncate _.id 5}} .section__content-title { color: {{title_1_color}}; } section.a{{truncate _.id 5}} .section__content-title strong { color: {{title_2_color}}; } section.a{{truncate _.id 5}} .custom-content { color: {{custom_content_color}}; } </style> <section id='{{_.id}}' class=\"a{{truncate _.id 5}} section-bisco {{#if content_position '==' \"left\"}}section-bisco--adjust{{/if}}\"> <figure class=\"section__image\"> {{#and image_mobile.src image.src }} <picture> <source srcset=\"{{image.src}}\" media=\"(min-width: 800px)\" /> <source srcset=\"{{image_mobile.src}}\" /> <img src=\"{{image.src}}\" alt=\"{{al-text}}\" /> </picture> {{else}} {{#if image.src}} <img src=\"{{image.src}}\" alt=\"{{al-text}}\" width=\"756\" height=\"870\"> {{/if}} {{/and}} {{#if floating_text}} <div class=\"label section__label\"> <img src=\"https://store-prgttqb2zi.mybigcommerce.com/content/hexagon-red.svg\" alt=\"\" width=\"8\" height=\"9\"> {{floating_text}} </div> {{/if}} </figure> <div class=\"section__inner\" {{#if bg_color}}style=\"background: