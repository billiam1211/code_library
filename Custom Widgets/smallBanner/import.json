{
    "name": "Small Banner",
    "schema": [{
        "type": "tab",
        "label": "Small Banner",
        "sections": [
            {
                "label": "Settings",
                "settings": [
                    {
                        "type": "input",
                        "label": "Link URL",
                        "id": "url",
                        "default": "/",
                        "typeMeta": {
                            "placeholder": "enter url"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Link Text",
                        "id": "btn",
                        "default": " ",
                        "typeMeta": {
                            "placeholder": "enter button text"
                        }
                    },
                    {
                        "label": "HTML",
                        "type": "code",
                        "typeMeta": {
                            "language": "html",
                            "placeholder": "Insert heading text or HTML"
                        },
                        "id": "html",
                        "default": "Add HTML"
                    }
                ]
            }
        ]
    }],
    "template": "<div class='smallBanner'> <div class='smallBanner-content'> <p> {{{html}}} </p> <a href='{{url}}'>{{btn}}</a> </div> </div>"
}