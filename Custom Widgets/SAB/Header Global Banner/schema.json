{
    "name": "Header Banner",
    "schema": [{
        "type": "tab",
        "label": "Header Banner",
        "sections": [
            {
                "label": "Header Banner",
                "settings": [
                    {
                        "type": "input",
                        "label": "Banner Title",
                        "id": "bannerHeading",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter title"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Text",
                        "id": "bannerText",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Action",
                        "id": "bannerAction",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter link text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Action URL",
                        "id": "bannerAction__url",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter link URL"
                        }
                    }
                ]
            }
        ]
    }],
    "template": "<div class='header-top__container'> <div class='header-top__content'> <p class='header-top__red-bg'>{{bannerHeading}}</p> <p class='header-top__text'>{{bannerText}}<a href='{{bannerAction__url}}'>{{bannerAction}}</a></span></p> </div> </div>"
}