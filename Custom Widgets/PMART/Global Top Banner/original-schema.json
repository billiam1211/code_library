{
    "name": "Global Banner",
    "schema": [{
        "type": "tab",
        "label": "Global Banner",
        "sections": [
            {
                "label": "Global Banner",
                "settings": [
                    {
                        "type": "input",
                        "label": "Banner link",
                        "id": "bannerLink",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter url"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Text #1",
                        "id": "bannerText-01",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Text #2",
                        "id": "bannerText-02",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "color",
                        "label": "Banner Background Color",
                        "id": "banner-bg-color",
                        "default": "#525b5c"
                    },
                    {
                        "type": "color",
                        "label": "Icon Fill Color",
                        "id": "icon-fill-color",
                        "default": "#FFFFFF"
                    },
                    {
                        "type": "color",
                        "label": "Large Text Color",
                        "id": "large-text-color",
                        "default": "#FFFFFF"
                    },
                    {
                        "type": "color",
                        "label": "Text Color",
                        "id": "text-color",
                        "default": "#FFFFFF"
                    }
                ]
            }
        ]
    }],
    "template": "<div class='header-banner' style='background-color: {{banner-bg-color}};'> <div class='container'> <div class='topBanner'> <div class='globalTopBanner'> <a href='{{bannerLink}}' class='globalTopBanner-link'> <div class='globalTopBanner-icon'> <svg class='icon-shipping' style='fill: {{icon-fill-color}}'> <use xlink:href='#icon-Shipping'></use> </svg> </div> <div class='globalTopBanner-text'> <div class='largeText'><span style='color: {{large-text-color}};'>{{bannerText-01}}</span></div> <div style='color: {{text-color}}'>{{bannerText-02}}</div> </div> </a> </div> </div> </div> </div>"
}