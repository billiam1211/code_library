{
    "name": "Homepage Banner",
    "schema": [{
        "type": "tab",
        "label": "Homepage Banner",
        "sections": [
            {
                "label": "Banner Contents",
                "settings": [
                    {
                        "type": "imageManager",
                        "id": "banner-image",
                        "default": {
                            "src": "https://images.unsplash.com/photo-1533038590840-1cde6e668a91?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2000&q=100",
                            "type": "IMAGE_MANAGER"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Image Description",
                        "id": "banner-image-alt",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter image description"
                        }
                    },
                    {
                        "type": "imageManager",
                        "id": "content-image",
                        "default": {
                            "src": "https://images.unsplash.com/photo-1533038590840-1cde6e668a91?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2000&q=100",
                            "type": "IMAGE_MANAGER"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Image Description",
                        "id": "content-image-alt",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter image description"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Heading",
                        "id": "banner-heading",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter heading"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Text",
                        "id": "banner-text",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter text"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Link URL",
                        "id": "banner-link-url",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter link url"
                        }
                    },
                    {
                        "type": "input",
                        "label": "Banner Link Text",
                        "id": "banner-link-text",
                        "default": "",
                        "typeMeta": {
                            "placeholder": "enter link text"
                        }
                    }
                ]
            }
        ]
    }],
    "template": "<div class='homepage-banner'> <div class='banner-image-container'> <img src='{{banner-image.src}}' alt='{{banner-image-alt}}'> </div> <div class='homepage-banner-content'> <img src='{{content-image.src}}' alt='{{content-image-alt}}'> <h2>{{banner-heading}}</h2> <p>{{banner-text}}</p> <a href='{{banner-link-url}}'>{{banner-link-text}}</a> </div> </div>"
}