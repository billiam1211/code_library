{
	// Place your global snippets here. Each snippet is defined under a snippet name and has a scope, prefix, body and 
	// description. Add comma separated ids of the languages where the snippet is applicable in the scope field. If scope 
	// is left empty or omitted, the snippet gets applied to all languages. The prefix is what is 
	// used to trigger the snippet and the body will be expanded and inserted. Possible variables are: 
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. 
	// Placeholders with the same ids are connected.
	// Example:
	"Console Log": {
		"scope": "javascript,typescript",
		"prefix": "cl",
		"body": [
			"console.log(`${$1}`);",
			"$2"
		],
		"description": "Log output to console"
	},
	"Console Log (Simple)": {
		"scope": "javascript,typescript",
		"prefix": "cs",
		"body": [
			"console.log('$1', $2);"
		],
		"description": "Log output to console"
	},	
	"Media Query (Cornerstone)": {
		"scope": "css, scss",
		"prefix": "@inc",
		"body": [
			"@include breakpoint('$1') {$2}",
		],
		"description": "Cornerstone media query"
	},
	"Media Query (min-width)": {
		"scope": "css, scss",
		"prefix": "@mq",
		"body": [
			"@media (min-width: $1px) {$2}",
		],
		"description": "Cornerstone media query"
	},
	"Stencil Font Family": {
		"scope": "css, scss",
		"prefix": "stff",
		"body": [
			"font-family: stencilFontFamily('$1');",
		],
		"description": "stencil font family reference"
	},
	"Stencil Color": {
		"scope": "css, scss",
		"prefix": "stnc",
		"body": [
			"stencilColor('$1')"
		],
		"description": "stencil color reference"
	},
	"Absolute Position Center": {
		"scope": "css, scss",
		"prefix": "ctr",
		"body": [
			"position: relative;",
			"position: absolute;",
			"top: 50%;", 
			"left:50%;",
			"transform: translate(-50%, -50%);"
		],
		"description": "position an element center"
	}
}